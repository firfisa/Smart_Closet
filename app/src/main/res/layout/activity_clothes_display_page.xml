<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WardrobePage.ClothesDisplayPageActivity"
    android:background="@drawable/backgound_all_2">

    <RelativeLayout
        android:id="@+id/layout_wardrobe_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#F1EDED"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_clothes_display_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="11sp"
            android:background="#F1EDED"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_wardrobe_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="衣柜1"
            android:textColor="#0E0E0E"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btn_add_clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/small_plus" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_clothes_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_wardrobe_titlebar">

        <GridLayout
            android:id="@+id/gl_clothes_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:columnCount="2">


        </GridLayout>

    </ScrollView>




</RelativeLayout>