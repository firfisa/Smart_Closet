<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/frag_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wea_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_margin="10px"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:scaleType="fitCenter" />
        <EditText
            android:id="@+id/et_wea_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入城市名称" />
        <Button
            android:id="@+id/bu_wea_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9DBAF4"
            android:text="搜索" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="台州市"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="45sp" />
        <TextView
            android:id="@+id/tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="90sp"
            android:text="6°"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/wea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="小雨转多云"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="西北风1级"
            android:textColor="@color/black" />
        <!--    今天和接下来三天天气-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/item_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="2022/12/6"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/item_icon1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp" />
            <TextView
                android:layout_marginLeft="50dp"
                android:id="@+id/item_temRange1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="4°-14°"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/item_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="2022/12/6"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/item_icon2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp" />
            <TextView
                android:layout_marginLeft="50dp"
                android:id="@+id/item_temRange2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="4°-14°"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/item_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="2022/12/6"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/item_icon3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"  />
            <TextView
                android:layout_marginLeft="50dp"
                android:id="@+id/item_temRange3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="4°-14°"/>

        </LinearLayout>
        <!--            <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="1dp"-->
        <!--                android:background="@color/black"-->
        <!--                android:layout_below="@id/item_date"-->
        <!--                android:layout_marginTop="10dp"/>-->
    </LinearLayout>
</LinearLayout>

